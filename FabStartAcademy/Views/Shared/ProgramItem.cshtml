@model ProgramItem


<a asp-action="@Actions.Program.Name" asp-route-id="@Model.ID" style="margin-top:5px;margin-right:-15px;" class="col-4 float-left">

    <div class=" card">
        <div class=" card-body">
            <div class="col-4 float-left" ><img src="@Model.Image" width="70" /></div>
            <div class="col-8 float-left">
                @Model.Title<br />
                @Model.Process
            </div>
        </div>

    </div>
</a>