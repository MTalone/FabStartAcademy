<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FabStartAcademy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/bootstrap-icons.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/ckeditor.js"></script>
</head>

<body>

    <div class="row">
        <div class="col-2 float-left ">
            <div class="card">
                <div class="card-header">


                    <a href="/"> <img src="~/imgs/thumb_3_image_big.png" style="max-width:90%" /></a>
                </div>
                <div class="card-body sidebar">
                    <form asp-action="@Actions.LogOut.Name" asp-controller="@Actions.LogOut.Controller"><input type="submit" id="btnLogOut" style="display:none;" /></form>
                    <h5><a id="lnkLogOut" href="#" class="btn btn-danger bi-box-arrow-left" style="font-size:20px"></a></h5>
                    <hr />
                    <h4>@Html.ActionLink(Resources.FabStartAcademy.Programs, Actions.Programs.Name, Actions.Programs.Controller)</h4>
                    <hr />
                    <h4>@Html.ActionLink(Resources.FabStartAcademy.Methods, Actions.Methods.Name, Actions.Methods.Controller)</h4>
                    <hr />
                    <h4>@Html.ActionLink(Resources.FabStartAcademy.Partners, Actions.Partners.Name, Actions.Partners.Controller)</h4>
                </div>
            </div>

        </div>
        <div class="col-10 float-left">
            @RenderBody()


        </div>

    </div>
    <div class="row"><div class="col-lg-12"></div></div>




    @RenderSection("Scripts", required: false)
    <script>
        $(document).ready(function () {

            $("#lnkLogOut").click(function (x) {
                $("#btnLogOut").click();
            })


        })
    </script>
</body>
</html>
