@model TeamModel

@{
    ViewData["Title"] = Resources.FabStartAcademy.Teams;
    bool first = true;
}

<h1>@Html.ActionLink(Resources.FabStartAcademy.Programs, Actions.Programs.Name) /  @Model.ProgramTitle</h1>
 @{
     Html.RenderPartial("ProgramBreadCrumbs", new ProgramBreadCrumb { ProgramID = Model.ProgramID, Action = Actions.Teams });
     }

<div class="col-12" style="margin-top:25px">
    <a asp-action="@Actions.Team.Name" asp-route-programId="@Model.ProgramID">@Resources.FabStartAcademy.CreateNew</a>
</div>

@foreach (var item in Model.Teams)
{

    <div class="col-12 card" style="@(!first? "margin-top:10px":"")">
            <a asp-action="@Actions.Team.Name" asp-route-id="@item.ID">



                <div class="col-2 float-left"><img src="@item.Image" width="70" /></div>
                <div class="col-10 float-left" style="margin-top:22px;">
                    @item.Title

                </div>


                
            </a>
            <div class="col-lg-2 float-left" style="margin-top:22px;">@Html.ActionLink(Resources.FabStartAcademy.AddMembers,Actions.Members.Name,new {TeamID=item.ID},new {@class="btn btn-primary" })</div>
       
       
    </div>

    first = false;

}

